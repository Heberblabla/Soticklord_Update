<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads ="http://schemas.android.com/apk/res-auto"
    tools:context=".Escoger_modo">

    <!-- Fondo animado -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="781dp"
        android:layout_height="479dp"
        ads:srcCompat="@drawable/fondo_escoger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageButton
        android:id="@+id/Primer_modo"
        android:layout_width="198dp"
        android:layout_height="153dp"
        android:onClick="primer_modo"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/primer_modo" />

    <ImageButton
        android:id="@+id/Segundo_modo"
        android:layout_width="195dp"
        android:layout_height="153dp"
        android:onClick="segundo_modod"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/segundo_modo" />

    <ImageButton
        android:id="@+id/Tercer_modo"
        android:layout_width="207dp"
        android:layout_height="151dp"
        android:onClick="tercer_modo"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/tercer_modo" />

    <ImageButton
        android:id="@+id/boton_atras"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:onClick="atras"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@drawable/boton_atras" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerView"
        android:layout_width="271dp"
        android:layout_height="39dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4214042047166873/7253298932"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintVertical_bias="0.956" />

    <ImageView
        android:id="@+id/imageView61"
        android:layout_width="299dp"
        android:layout_height="126dp"
        android:layout_marginBottom="280dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/aventura" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="364dp"
        android:layout_height="125dp"
        android:layout_marginBottom="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/multijugador" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="364dp"
        android:layout_height="125dp"
        android:layout_marginBottom="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.11"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/supervivencia" />


</androidx.constraintlayout.widget.ConstraintLayout>